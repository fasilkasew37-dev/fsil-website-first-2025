        <div id="deposit-sec" class="section"><h3>Deposit</h3><input type="number" id="dep-amt"><button class="btn-green" onclick="document.getElementById('dep-step-2').style.display='block'">Submit</button><div id="dep-step-2" style="display:none;"><button class="btn-blue" onclick="promptUpload('deposit')">Upload Receipt</button><input type="file" id="file-deposit" class="hidden-input"></div><button class="btn-red btn-small" onclick="goBack()">Back</button></div>
