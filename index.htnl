    <script>
        // --- FIREBASE CONFIG (COMPAT) ---
        const firebaseConfig = {
          apiKey: "AIzaSyAWS8PJ0kmu56hixesxV1KrMH8NRciH6U0",
          authDomain: "fasil-web-app-3a732.firebaseapp.com",
          projectId: "fasil-web-app-3a732",
          storageBucket: "fasil-web-app-3a732.firebasestorage.app",
          messagingSenderId: "239133072986",
          appId: "1:239133072986:web:0dcbd768e1e916b9b64263"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // --- VARS ---
        var user = null; var users = []; var posts = []; var groups = [];
        var activePostType = 'text'; var uploadTarget = ''; var lastReceiptUrl = '';
        var adminPass = localStorage.getItem('fg_admin_pass') || 'abc123456abc';
        var lang = 'am'; var hasAgreed = false; 

        // --- SPLASH LOGIC ---
        window.onload = function() {
            setTimeout(function() {
                const splash = document.getElementById('splash-screen');
                splash.style.opacity = '0';
                setTimeout(()=>splash.style.display='none', 1000);
            }, 2000); // 2 Seconds Flash
        };

        // --- LISTENERS ---
        db.collection("users").onSnapshot(s => { users=[]; s.forEach(d=>users.push({id:d.id, ...d.data()})); });
        db.collection("posts").orderBy("id", "desc").onSnapshot(s => { 
            posts=[]; s.forEach(d=>posts.push({docId:d.id, ...d.data()})); 
            if(document.getElementById('view-info').classList.contains('show')) renderPosts(activePostType);
        });
        db.collection("groups").onSnapshot(s => { groups=[]; s.forEach(d=>groups.push({id:d.id, ...d.data()})); });

        // --- TRANSLATIONS ---
        const TXT = { 'am':{'head-txt':'እንኳን ደህና መጡ'}, 'en':{'head-txt':'Welcome'} }; 
        function toggleLanguage(){ }

        // --- NAV & UI ---
        function showView(id) { 
            document.querySelectorAll('.section').forEach(e=>e.classList.remove('show')); 
            document.getElementById(id).classList.add('show'); 
        }
        function navTo(id) { showView(id); }
        function goBack() { if(user) showView('view-home'); else showView('view-agreement'); }
        function showAlert(m,t) { alert(m); } 
        function closeModal(){document.getElementById('custom-modal').style.display='none';}

        function navTab(t){
            if(t==='home'){ if(!hasAgreed) return alert("Agree First"); if(!user) return alert("Login First"); showView('view-home'); }
            if(t==='live') openLiveCamera();
            if(t==='profile'){ if(!user) return alert("Login"); showView('view-profile'); }
        }

        function handleAgree(){ hasAgreed=true; document.getElementById('welcome-content').style.display='none'; document.getElementById('auth-section').style.display='block'; }
        function showAuth(t){ document.getElementById('form-signup').style.display=t==='signup'?'block':'none'; document.getElementById('form-login').style.display=t==='login'?'block':'none'; }

        // --- AUTH ---
        function preSignup(){ 
            const p=document.getElementById('reg-phone').value;
            db.collection("users").where("phone","==",p).get().then(s=>{ if(!s.empty) alert("Already Registered"); else { document.getElementById('signup-step-1').style.display='none'; document.getElementById('signup-step-2').style.display='block'; } });
        }
        function finalSignup(){
             const n=document.getElementById('reg-name').value; const p=document.getElementById('reg-phone').value; const pw=document.getElementById('reg-pass').value;
             db.collection("users").add({name:n, phone:p, password:pw, balUSD:0, balETB:0}).then(()=>{ 
                 // LOGO -> TEXT -> DASHBOARD
                 const spl = document.getElementById('splash-screen');
                 const msg = document.getElementById('splash-msg');
                 msg.style.display='block'; spl.style.display='flex'; spl.style.opacity='1';
                 setTimeout(()=>{ spl.style.display='none'; showAuth('login'); }, 2000);
             });
        }
        function doLogin(){
            const p=document.getElementById('log-phone').value; const pw=document.getElementById('log-pass').value;
            db.collection("users").where("phone","==",p).where("password","==",pw).get().then(s=>{
                if(!s.empty){ 
                    user=s.docs[0].data(); user.id=s.docs[0].id;
                    // LOGO -> DASHBOARD
                    const spl = document.getElementById('splash-screen');
                    document.getElementById('splash-msg').style.display='none';
                    spl.style.display='flex'; spl.style.opacity='1';
                    setTimeout(()=>{ spl.style.display='none'; document.getElementById('view-agreement').classList.remove('show'); showView('view-home'); }, 1000);
                } else alert("Invalid");
            });
        }
        function doLogout(){ user=null; location.reload(); }
        function checkAuth(s){ if(user) navTo(s); else alert("Login"); }
        function toggleList(t){ const l=document.getElementById('list-'+t); l.style.display=l.style.display==='none'?'block':'none'; }

        // --- UPLOAD ---
        function promptUpload(t){
            uploadTarget=t; document.getElementById('file-profile').click();
            document.getElementById('file-profile').onchange=(e)=>{
                const r=new FileReader();
                r.onload=(ev)=>{
                     if(t==='pay'||t==='deposit') { lastReceiptUrl=ev.target.result; document.getElementById('receipt-modal').style.display='flex'; document.getElementById('rec-step-1').style.display='block'; document.getElementById('rec-step-2').style.display='none'; }
                     if(t==='post'){ document.getElementById('post-form-area').style.display='block'; }
                };
                r.readAsDataURL(e.target.files[0]);
            }
        }
        function showRecStep2(){ document.getElementById('rec-step-1').style.display='none'; document.getElementById('rec-step-2').style.display='block'; }
        function downloadReceipt(){ const a=document.createElement('a'); a.href=lastReceiptUrl; a.download="Rec.png"; a.click(); }
        function closeReceiptModal(){ document.getElementById('receipt-modal').style.display='none'; alert("እናመሰግናለን"); if(uploadTarget==='pay') navTo('view-info'); else document.getElementById('pass-modal').style.display='flex'; }
        
        // --- POSTS ---
        function setupPost(t){ activePostType=t; if(t!=='text') promptUpload('post'); else document.getElementById('post-form-area').style.display='block'; }
        function submitPost(){ 
            const t=document.getElementById('p-title').value;
            db.collection("posts").add({id:Date.now(), t, type:activePostType, u:user.name, uid:user.phone})
            .then(()=>{ alert("Success"); document.getElementById('post-form-area').style.display='none'; navTo('view-info'); });
        }
        function renderPosts(t){ document.getElementById('feed-container').innerHTML = posts.filter(p=>p.type===t).map(p=>`<div class="post-card"><b>${p.u}</b>: ${p.t} <button class="btn-red btn-tiny" onclick="delPost('${p.docId}','${p.uid}')">Del</button></div>`).join(''); }
        function delPost(did, uid) { if(uid===user.phone) db.collection("posts").doc(did).delete(); else alert("Not yours"); }

        // --- FEATURES ---
        function handleGroupCreate(){ showUserList(true); }
        function showUserList(sel){ document.getElementById('ul-cont').innerHTML=users.map(u=>`<div class="user-item" onclick="${sel?'this.classList.toggle(\'bright-blue\'); checkGrp()':''}"><b>${u.name}</b></div>`).join(''); document.getElementById('btn-grp-done').style.display=sel?'block':'none'; navTo('user-list-sec'); }
        function checkGrp(){ if(document.querySelectorAll('.bright-blue').length>=5) document.getElementById('btn-grp-done').style.display='block'; }
        function createGroup(){ db.collection("groups").add({name:"New Group"}); alert("Created"); goBack(); }
        function showMyGroups(){ document.getElementById('grp-list').innerHTML=groups.map(g=>`<div>${g.name}</div>`).join(''); navTo('my-groups-sec'); }
        function handleChatList(){ showUserList(false); }
        function sendChat(){ document.getElementById('chat-box').innerHTML += `<div>Me: ${document.getElementById('chat-in').value}</div>`; }
        function openPrem(t){ navTo('prem-pricing'); }
        function pay(a){ document.getElementById('pay-up-area').style.display='block'; }
        function finPay(){ alert("Activated"); goBack(); }
        function preDeposit(){ document.getElementById('dep-step-1').style.display='none'; document.getElementById('dep-step-2').style.display='block'; }
        function verifyPass(){ if(document.getElementById('pass-input').value===user.password){ document.getElementById('pass-modal').style.display='none'; if(pendingAct) pendingAct(); } else alert("Wrong"); }
        function triggerIntlPay(){ document.getElementById('pass-modal').style.display='flex'; pendingAct=()=>promptUpload('intl'); }
        function reqWithdraw(){ if(!document.getElementById('w-amt').value) return alert("Amount?"); document.getElementById('pass-modal').style.display='flex'; pendingAct=()=>{ alert("Success"); navTo('business-sec'); }; }
        function upBal(){ if(user) { /* Update logic */ } }
        function openLiveCamera() { showView('view-live'); navigator.mediaDevices.getUserMedia({video:true}).then(s=>{liveStream=s;document.getElementById('live-video-element').srcObject=s;}); }
        function stopLive() { if(liveStream)liveStream.getTracks().forEach(t=>t.stop()); goBack(); }
        function saveProfile() { db.collection("users").doc(user.id).update({name: document.getElementById('prof-name-edit').value}); alert("Updated"); }
        function giveFb(t) { if(t==='live') openLiveCamera(); else alert("Sent"); }
        function viewFbs(){ document.getElementById('fb-list').innerHTML="Feedbacks"; }
        function promptAdminAction(a){ document.getElementById('admin-action-modal').style.display='flex'; }
        function runAdminAction(){ document.getElementById('admin-action-modal').style.display='none'; alert("Access Granted"); }

        toggleLanguage();
    </script>
</body>
